<% if !@blogger.errors.empty?%>
    <% @blogger.errors.full_messages.each do |message|%>
        <%= message %><br>
    <% end %>
<% end %>

<h1>Edit Blogger </h1>
<%= form_for @blogger do |f| %>
<%= f.label :name %>
<%= f.text_field :name %><br>
<%= f.label :age %>
<%= f.text_field :age %><br>
<%= f.label :bio %>
<%= f.text_field :bio %><br>
<%= f.submit %>
<% end %>