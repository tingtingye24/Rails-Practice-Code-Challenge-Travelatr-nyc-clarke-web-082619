<% if !@post.errors.empty?%>
    <% @post.errors.full_messages.each do |message|%>
        <%= message %><br>
    <% end %>
<% end %>

<h1>Create Post </h1>
<%= form_for @post do |f| %>
<%= f.collection_select :blogger_id, @bloggers, :id, :name %>
<%= f.collection_select :destination_id, @destinations, :id, :name %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :content %>
<%= f.text_field :content %>

<%= f.submit %>
<% end %>