<% if !@destination.errors.empty?%>
    <% @destination.errors.full_messages.each do |message|%>
        <%= message %><br>
    <% end %>
<% end %>

<h1>Edit Destination</h1>
<%= form_for @destination do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :country %>
<%= f.text_field :country %>
<%= f.submit %>
<% end %>